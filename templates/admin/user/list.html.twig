{% extends 'admin/layout.html.twig' %}

{% block title %}list Utilisateur
{% endblock %}

{% block body %}

	<h1>List des utilisateurs</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>Roles</th>
				<th>Pr√©nom</th>
				<th>Nom</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>

					<td>{{ user.firstname }}</td>
					<td>{{ user.lastname }}</td>
					<td>
						<a href="{{ path('admin_user_edit', {id:user.id}) }}">
							<button type="button" class="btn btn-outline-info btn-sm">Update</button>
						</a>
					</td>

				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<a href="{{ path('admin_user_add') }}">
		<button type="button" class="btn btn-outline-secondary btn-sm">Nouvel Utilisateurs</button>
	</a>

{% endblock %}
