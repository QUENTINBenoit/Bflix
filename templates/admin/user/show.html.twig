{% extends 'admin/layout.html.twig' %}

{% block title %}Utilisateur
{% endblock %}

{% block body %}
	<h1>User</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Password</th>
				<td>{{ user.password }}</td>
			</tr>
			<tr>
				<th>Firstname</th>
				<td>{{ user.firstname }}</td>
			</tr>
			<tr>
				<th>Lastname</th>
				<td>{{ user.lastname }}</td>
			</tr>
		</tbody>
	</table>

	<div class="row">
		<div class="col-auto me-auto">
			<a href="{{ path('admin_user_list') }}">
				<button type="button" class="btn btn-outline-secondary btn-sm">Retour Ã  la list Utilisateurs</button>
			</a>
		</div>

		<div class="col-auto">
			{{ include('admin/user/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
