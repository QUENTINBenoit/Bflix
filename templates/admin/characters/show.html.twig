{% extends "admin/layout.html.twig" %}
{% block content %}

	<section class="text-center container">
		<div class="row">
			<div class="col-lg-6 col-md-8 mx-auto">
				<h1 class="fw-light">{{character.firstname}}</h1>
				<p>
					<a href="{{ path('admin_characters_edit', {id:character.id}) }}">
						<button type="button" class="btn btn-outline-info btn-sm rounded-pill">Editer</button>
					</a>

					<a href="{{ path('admin_characters_delete', {id:character.id}) }}">
						<button type="button" class="btn btn-outline-danger btn-sm rounded-pill">Supprimer</button>
					</a>


				</p>
			</div>
		</div>
	</section>

	<div class="py-5 bg-light">
		<div class="container">
			<p class="mx-4">{{character.bio}}
			</p>
		</div>
		<div class="container">

			<a href="{{ path('admin_characters_list') }}" class=" mx-4">
				<button type="button" class="btn btn-outline-success btn-sm rounded-pill">Liste des Personnage</button>
			</a>

		</div>
	</div>


{% endblock %}
